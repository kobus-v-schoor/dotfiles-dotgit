.wallpaper.jpg:x
.xinitrc:x
.config/sxhkd/sxhkdrc:x
.config/user-dirs.dirs:x
.config/compton.conf:x
.conky:x

.config/bspwm/bspwmrc:laptop
.config/bspwm/bspwmrc:desktop
.config/bspwm/bspwmrc:tt-desktop

.config/termite/config:laptop
.config/termite/config:desktop
.config/termite/config:tt-desktop

# shell, shell-extra
.bashrc:shell
.bash_profile:shell
.bash_extra:shell-extra

.bash_local:laptop

# scripts, scripts-mod
.scripts/auto-mount.sh:scripts
.scripts/notify.sh:scripts-daemon

